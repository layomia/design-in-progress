<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@user, multipart: true) do |f| %>
  
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  
  <div class="field">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>
  
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  
  <div class="field">
    <%= f.label :major %>
    <%= f.text_field :major %>
  </div>
  
  <div class="field">
    <%= f.label :year %>
    <%= f.select :year, User.years.keys.map { |w| [w.humanize, w] }, include_blank: 'select one...' %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
