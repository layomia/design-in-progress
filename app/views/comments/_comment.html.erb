<div class="row comment-frame">
    <div class="col col-md-2" style="text-align: center">
        <%= link_to user_path(comment.user_id) do %>
            <%= image_tag(image_url(User.find(comment.user_id).avatar.url(:thumb)), class: "user-avatar", size: "30x38") %>
        <% end %>
    </div>
    <div class="col col-md-10">
        <div class="row">
            <div class="col col-md-6 comment-author">
                <%= link_to User.find(comment.user_id).username, user_path(comment.user_id) %>
            </div>
            <div class="col col-md-6 comment-time-created" style="text-align:right">
                <%= distance_of_time_in_words(comment.updated_at, Time.now) %>
            </div>
        </div>
        <div class="row">
            <div class="col col-md-12 comment-body">
                <%= comment.body %>
            </div>
        </div>
    </div>
</div>